{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/analyze-image",
        "function": "analyzeImage"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}